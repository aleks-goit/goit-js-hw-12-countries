<h2 class="card__name">{{name}}</h2>
<ul class="card__list">
    <li class="card__capital"><span> Capital: </span>{{capital}}</li>
    <li class="card__population">
        <span>Papulation:</span> {{population}}
    </li>
    <li class="card__languages">
        <span> Languages:</span>
        <ul class="card__languages-list">
            {{#each languages}}
            <li class="languages__item">{{this.name}}</li>
            {{/each}}
        </ul>
    </li>
</ul>
<img src="{{flag}}" alt="{{name}}" class="img-flag" />